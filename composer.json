{
    "name": "statsig/statsigsdk",
    "description": "The Statsig php SDK for multi-user, server side environments.",
    "keywords": [
        "feature gate", "ab test", "ab test", "statsig"
    ],
    "type": "library",
    "license": "ISC",
    "homepage": "https://github.com/statsig-io/php-sdk",
    "authors": [{
        "name": "Statsig",
        "email": "support@statsig.com",
        "homepage": "https://www.statsig.com"
    }],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4 || ^8.0",
        "ua-parser/uap-php": "^3.9",
        "statsig/ip3country": "^0.1.0",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.3"
    },
    "support": {
        "issues": "https://github.com/statsig-io/php-sdk/issues",
        "source": "https://github.com/statsig-io/php-sdk"
    },
    "autoload": {
        "psr-4": {
            "Statsig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Statsig\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --no-coverage"
    }
}
